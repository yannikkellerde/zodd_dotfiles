# No super hotkeys

XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

XF86AudioPrev
  dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

XF86AudioPlay
  dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86MonBrightness{Up,Down}
	brightnessctl s 10000{+,-}


super + {f2,f3}
	brightnessctl s 1000{+,-}

# Changing the Volume

XF86Audio{Raise,Lower}Volume
	pulsemixer --change-volume {+,-}5

XF86AudioMute
	pulsemixer --toggle-mute

Print
	flameshot gui -p ~/Pictures/screenshots/

shift + Print
	flameshot full -p ~/screenshots

# Caps lock
shift + Caps_Lock
	xdotool key Caps_Lock


# wm independent hotkeys

# run single command
super + r
	bashrun2

# terminal emulator
super + Return
	kitty -e zsh

# open firefox
super + z 
	firefox

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + e
    thunar 

# launch/restart polybar
super + p
    ~/.config/polybar/scripts/launch-polybar.sh

# rofi 
super + d
	rofi -modi drun -show drun -width 5

super + k
  setxkbmap de

# pacman update
super + u
    bspc rule -a \* -o state=floating && kitty -e $SHELL -c "figlet update... && sudo pacman -Syu"

# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# rotate window
super + ctrl + r
	bspc node @parent -R 90

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Lock screen
super + alt + x
	lxdm -c USER_SWITCH
#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + alt + b
  bluetoothctl -- connect 11:11:11:11:21:31

super + ctrl + b
	bash /home/kappablanca/.config/bspwm/bspwmrc

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + ctrl + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# --------- DUNST (NOTIFICATION MANAGER) ---------

# close all notifications
super + ctrl + x
    dunstctl close-all

# notifications history
super + ctrl + h
    dunstctl history-pop

#
# scratchpad
#

super + alt + d
	/home/kappablanca/.local/bin/toggle_scratchpad discord &

super + alt + Return
	/home/kappablanca/.local/bin/toggle_scratchpad kitty &

super + alt + t
	/home/kappablanca/.local/bin/toggle_scratchpad thunderbird&
